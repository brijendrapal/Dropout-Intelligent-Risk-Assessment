def get_dropout_score(row_data):
    """Send a single student record to the LLM for a risk assessment."""
    prompt = f"""You are an academic advisor. Analyze the following student data and provide a 'Dropout Risk Score' from 0.000(low risk) to 1.000(high risk). Provide a brief one-sentence reason for the score.
    Student Data:
    {row_data}
 
    Response format: Score: [Score] | Reason: [Reason] | Rating: [High(if the score is between 0.70-1.00)/Medium(if the score is between 0.50-0.70)/Low(if the score is between 0-0.50)]"""
    response=client.chat.completions.create(model=deployment,
                                         messages=[
                                             {"role": "system", "content": "You are a helpful assistant that analyzes student data."},
                                             {"role": "user", "content": prompt}
                                         ],
                                         temperature = 0
                                         )
    return response.choices[0].message.content

    import pandas as pd
def process_csv(file_path):
    df =pd.read_csv(file_path)
    print("-------Analyzing Student Data-----")
    results = []
    for index, row in df.iterrows():
        student_info = row.to_dict()
        analysis = get_dropout_score(student_info)
        results.append(analysis)
        print(f"Student {index} : {analysis}")
    df['LLM_Analysis'] = results
    df[['Score','Reason','Rating']] = df['LLM_Analysis'].str.split('|', n=2, expand=True)
    df[['student_id','Score','Reason','Rating']].to_csv("Analyzed_Student_1.csv",index=False)
    print("--------------Success analyzing--------------------------")

    if __name__ == "__main__":
    process_csv("output_1.csv")